<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>site.yueyiqiu.servlet.LoginXServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  	
  <servlet>
    <servlet-name>good</servlet-name>
    <servlet-class>site.yueyiqiu.servlet.GoodServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>good</servlet-name>
    <url-pattern>/listgoods</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>good</servlet-name>
    <url-pattern>/listbrowsegoods</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>good</servlet-name>
  <url-pattern>/viewgood</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
  <servlet-name>good</servlet-name>
  <url-pattern>/clearbrowse</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>shopcart</servlet-name>
  <servlet-class>site.yueyiqiu.servlet.ShopCartServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>shopcart</servlet-name>
  <url-pattern>/buy</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>shopcart</servlet-name>
  <url-pattern>/remove</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>shopcart</servlet-name>
  <url-pattern>/showshopcart</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>shopcart</servlet-name>
  <url-pattern>/clearshopcart</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>shopcart</servlet-name>
  <url-pattern>/submitshopcart</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>shopcart</servlet-name>
  <url-pattern>/createorderform</url-pattern>
  </servlet-mapping>
  
  <filter>
  <filter-name>characterencoding</filter-name>
  <filter-class>site.yueyiqiu.filter.CharacterEncodingFilter</filter-class>
  <init-param>
  <param-name>encoding</param-name>
  <param-value>BIG5</param-value>
  </init-param>
  </filter>
  
  <filter-mapping>
  <filter-name>characterencoding</filter-name>
  <url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>